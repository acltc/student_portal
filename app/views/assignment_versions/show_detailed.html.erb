<div class="row row-margin">
  <div class="col-md-2">
      <div class="white">
        <%= link_to "All Assignment Versions", assignment_versions_path %><br>
        <a href="/assignment_versions/<%= @assignment_version.id %>">Regular view</a>
      </div>
    </div>
  <div class="col-md-10">
    <div class="white">
      <div class="row">
        <div class="col-md-12">
          <h2><%= @assignment_version.description %></h2>
          <ul class="nav nav-tabs">
            <% @assignment_version.assignments.select(:week).distinct.count.times do |index| %>
              <li class="<%= index == 0 ? 'active' : '' %>">
                <a data-toggle="tab" href="#week-<%= index + 1 %>">Week <%= index + 1 %></a>
              </li>
            <% end %>
          </ul>
          <div class="tab-content">
            <% @assignment_version.assignments.select(:week).distinct.count.times do |index| %>
            <div id="week-<%= index + 1 %>" class="tab-pane fade in <%= index == 0 ? 'active' : '' %>">
              <% @assignment_version.assignments.where(week: index + 1).order(:assignment_order).each do |assignment| %>
                <div class="well">
                  <a href="/assignments/<%= assignment.id %>/edit" target="_blank"><%= assignment.title %></a>
                  <div>
                    <%= assignment.question.html_safe %>
                  </div>

                </div>
              <% end %>
            </div>
            <% end %>
          </div>

              <table class="table">
                <tr>
                  <th>Title</th>
                  <th>Week</th>
                  <th>Assignment Order</th>
                  <th>Delete Assignment</th>
                </tr>
                  <%= fields_for 'assignments[]', [] do |f| %>
                    <% @assignment_version.assignments.order(:assignment_order).each do |assignment| %>
                        <tr>
                          <%= f.hidden_field :id, value: assignment.id %>
                          <td><%= link_to assignment.title, edit_assignment_path(assignment) %></td>
                          <td><%= f.text_field :week, value: assignment.week  %></td>
                          <td><%= f.text_field :order, value: assignment.assignment_order %></td>
                          <td><%= link_to "Delete", assignment_path(assignment), method: "delete", data: {confirm: "Are you sure? Any cohort that uses this version will lost this exercise. Every student that's submitted a solution to this exercise will be lost."} %></td>
                        </tr>
                    <% end %>
                  <% end %>
                </table>
        </div>
      </div>
    </div>
</div>
