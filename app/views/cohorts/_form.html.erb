<div class="row row-margin">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <%= form_for @cohort do |f| %>
    <p class="warning-text"><%= @cohort.errors.full_messages.join("<br/>").html_safe if @cohort.errors %></p>
    <div class="form-group">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :gmail_calendar, "Google Calendar Email Address" %>
      <%= f.text_field :gmail_calendar, class: "form-control" %>
      <p class="help-block">A Gmail Calendar from a Gmail account is used to import the calendar for a cohort. Enter a Gmail email address to load a calendar. <i>Be sure to make the calendar public, or it won't work.</i></p>
    </div>   
    <div class="form-group">
      <%= f.label :start_date %>  
      <%= f.date_select :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.collection_select :location_id, Location.all, :id, :name %>
    </div>
    <div class="form-group">
      <%= f.label :instructor %>
      <%= f.collection_select :instructor_id, User.where(role_id:2), :id, :full_name %>
    </div>
    <div class="form-group">
      <%= f.label :assignment_version %>
      <%= f.collection_select :assignment_version_id, AssignmentVersion.all, :id, :description %>
    </div> 
    <div class="form-group">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
<div class="col-md-2"></div>
</div>