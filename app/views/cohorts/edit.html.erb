<div class="row row-margin">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <%= form_for @cohort do |f| %>
    <div class="form-group">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :start_date %>  
      <%= f.date_select :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.collection_select :location_id, Location.all, :id, :name %>
    </div>
    <div class="form-group">
      <%= f.label :instructor %>
      <%= f.collection_select :instructor_id, User.where(role_id:2), :id, :full_name %>
    </div>  
    <div class="form-group">
      <%= f.submit "Update Cohort", class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
<div class="col-md-2"></div>
</div>