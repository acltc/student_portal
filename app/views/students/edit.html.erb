<div class="row row-margin">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <h2>Edit Student</h2>
    <p class="warning"><%= @student.errors.full_messages.join("<br/>").html_safe if @student.errors %></p>
    <%= form_tag student_path, method: "patch" do %>
      <div class="form-group">
        <%= label_tag :first_name %>
        <%= text_field_tag :first_name, @student.first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :last_name %>
        <%= text_field_tag :last_name, @student.last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, @student.email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Edit Student", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>